<Window x:Class="Subscription_Manager.EditSubscriptionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        Title="Edit Subscription"
        Height="480"
        Width="720"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#FFD9D9D9">

    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Subscription Name *" FontFamily="Cooper Black" FontSize="15"/>
            <TextBox x:Name="NameBox"
                Grid.Row="1"
                Margin="0,5,20,15"
                TextChanged="InputChanged"/>


            <TextBlock Text="Cost($USD)*" Grid.Row="2" FontFamily="Cooper Black" FontSize="15"/>
            <TextBox x:Name="CostBox"
                Grid.Row="3"
                Margin="0,5,20,15"
                PreviewTextInput="CostBox_PreviewTextInput"
                TextChanged="InputChanged"/>


            <TextBlock Text="Color" Grid.Row="4" FontFamily="Cooper Black" FontSize="15"/>
            <Button x:Name="ColorButton"
                Grid.Row="5"
                Width="120"
                Content="Select Color"
                Margin="0,5,0,0"
                Click="ColorButton_Click"
                BorderBrush="#FFED2323"
                Foreground="White"
                Background="#FF822525"
                FontFamily="Cooper Black"/>



            <CheckBox x:Name="ActiveCheck"
                      Grid.Row="6"
                      Content="Active"
                      FontFamily="Cooper Black"
                      FontSize="13" Margin="0,143,0,-143"/>
            <TextBlock
                Text="Category"
                FontWeight="Bold"
                Margin="0,25,226,-23" Grid.Row="6"
                FontFamily="Cooper Black" FontSize="16"/>
            <ComboBox
                x:Name="CategoryBox"
                SelectedValuePath="."
                Height="28"
                Margin="10,56,43,-63"
                IsEditable="False"
                SelectedValue="{Binding Category, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Grid.Row="6">
                <sys:String>Streaming</sys:String>
                <sys:String>Gaming</sys:String>
                <sys:String>Utilities</sys:String>
                <sys:String>Music</sys:String>
                <sys:String>Productivity</sys:String>
                <sys:String>Shopping</sys:String>
                <sys:String>Other</sys:String>
            </ComboBox>

        </Grid>

        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Billing Cycle *" FontFamily="Cooper Black" FontSize="16"/>
            <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,5,0,15">
                <RadioButton x:Name="MonthlyRadio"
                             Content="Monthly"
                             GroupName="BillingCycle"
                             FontFamily="Corbel"
                             FontWeight="Bold"/>
                <RadioButton x:Name="YearlyRadio"
                             Content="Yearly"
                             GroupName="BillingCycle"
                             Margin="20,0,0,0"
                             FontFamily="Corbel"
                             FontWeight="Bold"/>
            </StackPanel>

            <TextBlock Text="First Billing Date *" Grid.Row="2" FontFamily="Cooper Black" FontSize="16"/>
            <DatePicker x:Name="BillingDatePicker"
                    Grid.Row="3"
                    Margin="0,5,0,15"
                    FontFamily="Corbel"
                    FontWeight="Bold"
                    SelectedDateChanged="InputChanged"/>


            <TextBlock
                Text="Description"
                Grid.Row="4"
                Margin="0,10,0,4"
                FontFamily="Cooper Black"
                FontSize="16"/>

            <TextBox
                x:Name="DescriptionBox"
                Grid.Row="4"
                Margin="0,53,0,136"
                Height="120"
                AcceptsReturn="True"
                VerticalScrollBarVisibility="Auto"
                Text="{Binding Description, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

        </Grid>

        <StackPanel Grid.Row="1"
            Grid.ColumnSpan="2"
            Orientation="Vertical"
            VerticalAlignment="Bottom"
            Margin="0,20,0,0">

            <!-- Error message -->
            <TextBlock x:Name="ErrorText"
               Text="Please fill out all of the required fields to add/edit a subscription."
               Foreground="Red"
               FontWeight="Bold"
               Visibility="Collapsed"
               TextWrapping="Wrap"
               Margin="0,0,0,10"/>

            <!-- Buttons row -->
            <StackPanel Orientation="Horizontal"
                HorizontalAlignment="Right">

                <Button Content="Delete"
                Width="120"
                Height="42"
                Click="Delete_Click"
                Background="Red"
                Foreground="White"
                FontWeight="Bold"
                FontFamily="Cooper Black"
                FontSize="20"/>

                <Button
                Content="Cancel"
                Width="120"
                Margin="8,0,0,0"
                IsCancel="True"
                Click="Cancel_Click"
                Background="#FFFF5757"
                Foreground="White"
                FontWeight="Bold"
                FontFamily="Cooper Black"
                FontSize="20"/>

                <Button Content="Save"
                Width="120"
                Height="42"
                Margin="10,0,0,0"
                Click="Save_Click"
                Background="#FFF15A21"
                Foreground="White"
                FontWeight="Bold"
                FontFamily="Cooper Black"
                FontSize="20"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
