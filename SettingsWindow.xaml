<Window x:Class="Subscription_Manager.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings"
        Height="290" Width="460"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner"
        Background="#FFEFEFEF">

    <Grid Margin="18">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Settings"
                   FontFamily="Cooper Black"
                   FontSize="26"
                   Margin="0,0,0,10"/>

        <Border Grid.Row="1"
                Background="White"
                CornerRadius="8"
                Padding="18"
                BorderBrush="#DDD"
                BorderThickness="1">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0" Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Currency Symbol"
                               VerticalAlignment="Center"
                               FontFamily="Cooper Black"
                               FontSize="14"
                               Margin="0,0,14,0"/>

                    <TextBox Grid.Column="1"
                             Width="70"
                             Height="28"
                             Padding="8,4"
                             HorizontalAlignment="Right"
                             VerticalContentAlignment="Center"
                             Text="{Binding CurrencySymbol, UpdateSourceTrigger=PropertyChanged}"
                             MaxLength="3"
                             PreviewTextInput="CurrencySymbol_PreviewTextInput"
                             FontFamily="Consolas"/>
                </Grid>

                <CheckBox Grid.Row="1"
                          Content="Enable desktop notifications"
                          IsChecked="{Binding NotificationsEnabled}"
                          FontFamily="Cooper Black"
                          FontSize="13"/>
            </Grid>
        </Border>

        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="0,16,0,0">

            <Button Content="Cancel(Esc)"
                    Width="89"
                    Height="28"
                    Margin="0,0,12,0"
                    IsCancel="True"
                    Click="Cancel_Click"
                    Foreground="White"
                    Background="#FFFF5757"
                    FontFamily="Cooper Black"/>

            <Button Content="Save (Enter)"
                    Width="89"
                    Height="28"
                    IsDefault="True"
                    Click="Save_Click"
                    Background="#FFF15A21"
                    Foreground="White"
                    FontFamily="Cooper Black"/>
        </StackPanel>
    </Grid>
</Window>
